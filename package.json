{
    "name": "react-hooks",
    "description": "React hooks collection",
    "version": "1.0.0",
    "license": "MIT",
    "keywords": [
        "typescript",
        "react",
        "hooks"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cyberia-studio/react-hooks.git"
    },
    "author": {
        "name": "Cyberia",
        "url": "https://cyberia.studio"
    },
    "homepage": "https://github.com/cyberia-studio/react-hooks#readme",
    "bugs": {
        "url": "https://github.com/cyberia-studio/react-hooks/issues"
    },
    "main": "./dist/index.js",
    "types": "./types/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js"
        }
    },
    "devDependencies": {
        "@types/react": "^18.2.8",
        "@typescript-eslint/eslint-plugin": "^5.59.9",
        "@typescript-eslint/parser": "^5.59.9",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "prettier": "^2.8.8",
        "tsc-alias": "^1.8.6",
        "typescript": "^5.1.3"
    },
    "peerDependencies": {
        "react": "^16.8.0  || ^17.0.0 || ^18.0.0"
    },
    "engines": {
        "node": ">=16.15.0",
        "npm": ">=8"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs --target es5",
        "build:esm": "tsc -p tsconfig.build.json --module esNext --outDir dist/esm --target es6",
        "publish": "npm publish --access public",
        "lint": "eslint '**/*.{js,jsx,ts,tsx}'"
    }
}
